<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DevFeed{% endblock %}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% include('app/notification/notifications.html.twig') %}
        {% include('app/layout/navigation.html.twig') %}
        <div class="main-content">
            {% block body %}{% endblock %}
            {{ encore_entry_script_tags('app') }}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {{ encore_entry_script_tags('js/notification') }}
            {% endif %}
            {% block javascripts %}
            {% endblock %}
        </div>
    </body>
</html>
